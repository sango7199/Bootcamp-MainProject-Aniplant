<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.vote">
    <resultMap id="voteResultMap" type="voteVO">
		<result property="vote_num" column="vote_num"/>
        <result property="post_num" column="post_num"/>
        <result property="created_user_num" column="created_user_num"/>
        <result property="is_voted" column="is_voted"/>
        <result property="created_at" column="created_at"/>
    </resultMap>
    
     <select id="hasVoted" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM TB_VOTE
        WHERE Post_Num = #{postNum}
          AND Created_User_Num = #{createdUserNum}
          AND Is_Voted = #{voteType}
    </select>
    
    <insert id="recordVote">
        INSERT INTO TB_VOTE (Post_Num, Created_User_Num, Is_Voted, Created_At)
        VALUES (#{post_num}, #{created_user_num}, #{is_voted}, #{created_at})
    </insert>
    
    
</mapper>
